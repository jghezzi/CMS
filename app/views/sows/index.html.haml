      %th Begin date
      %th End date
      %th Sow hours
      %th Bill rate
      %th Client
      %th Project
      %th
      %th
      %th

  %tbody
    - @sows.each do |sow|
      %tr
        %td= sow.begin_date
        %td= sow.end_date
        %td= sow.sow_hours
